{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true ,
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@classroom/app/*": ["./modules/app/*"],
      "@classroom/protocol/*": ["./modules/protocol/lib/*"],
    }
  },
  "include": [
    "modules/app/**/*.ts",
    "modules/app/**/*.d.ts",
    "modules/app/**/*.tsx",
    "modules/app/**/*.vue",
    "modules/protocol/lib/**/*.ts",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
